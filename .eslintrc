{
  "parser": "@babel/eslint-parser",
  "extends": "eslint:recommended",
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": false
    },
    "babelOptions": { "presets": ["@babel/preset-react"] },
    "sourceType": "module"
  },
  "globals": {
    "strapi": true
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "indent": "off"
  }
}
