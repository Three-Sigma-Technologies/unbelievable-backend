{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "BlogPosts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortDesc": {
      "type": "text"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "blogTags": {
      "via": "blogPosts",
      "collection": "blog-tags",
      "dominant": true
    },
    "blogAuthor": {
      "model": "blog-author",
      "via": "blogPosts"
    }
  }
}
