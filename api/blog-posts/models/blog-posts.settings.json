{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "BlogPosts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "privateAttributes": [
      "created_at",
      "updated_at"
    ]
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "shortDesc": {
      "type": "text"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "blogAuthor": {
      "model": "blog-author",
      "via": "blogPosts"
    },
    "blogTopics": {
      "collection": "blog-topics",
      "via": "blogPosts",
      "dominant": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "bookmarked_by": {
      "via": "bookmarked_blog_posts",
      "plugin": "users-permissions",
      "collection": "user",
      "dominant": true
    },
    "views": {
      "type": "integer"
    },
    "readTime": {
      "type": "integer",
      "required": false,
      "min": 0
    }
  }
}
